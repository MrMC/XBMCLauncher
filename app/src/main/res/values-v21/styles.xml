    	<item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
    	<item name="android:colorAccent">@color/theme_accent</item>
    	<item name="android:textColorLink">@color/theme_accent</item>
    	<item name="android:dialogTheme">@style/MaterialDialogTheme</item>
    	<item name="android:alertDialogTheme">@style/MaterialDialogTheme</item>
    	<item name="android:windowContentOverlay">@null</item>
